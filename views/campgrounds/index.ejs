         </div>
     </header>

     <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <% campgrounds.forEach(function(campground){ %>
            <div class="col-md-3 col-sm-6">
              <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary thumbnail">

                  <div class="test">
                    <img class="test1" src="<%= campground.image %>">
                  </div>

                   <div class="caption">
                       <h4><%= campground.name %></h4>
                   </div>
              </a>
            </div>
        <% }); %>
    </div>
</div>

