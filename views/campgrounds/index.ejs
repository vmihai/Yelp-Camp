<% include ../partials/header %>
 <div class="container">
     <header class="jumbotron">
         <div class="container">
             <!-- <h1>Welcome To YelpCamp!</h1>
             <p>View our hand-picked campgrounds from all over the world</p> -->
             <img src="https://s3.eu-west-2.amazonaws.com/furicurent/logo.jpg">
